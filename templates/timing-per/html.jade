html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width')
    style(type='text/css').
      .container {
        color:#333;
        font-size:12px; 
        max-width:600px!important;
        display:block!important;
        padding: 0 10px;
        clear:both!important;
      }
      h2 { 
        font-weight: 700; 
        font-size: 14px; 
      } 
      table{ 
        width:100%;
        font-size:12px; 
        box-sizing:border-box;
        border:1px solid #ddd;
        border-spacing:0;
        border-collapse:collapse;
      }
      th{ 
        width:15%!important; 
        box-sizing:border-box;
        padding:7px 5px;
        text-align: center;
        font-weight:bold;
        background:#f8f8f8;
      }
      td{ 
        padding:7px 5px 10px; 
        border:1px solid #ddd; 
        text-align: center; 
      }
      tr th:first-child { 
        width: 40%!important; 
      }
      .drop { 
        color: #31A800; 
      }
  body
    div.container
      each v, k in data
        h2 #{keyMap[k]}
        table
          tr
            th(width="20%") 指标
            th(width="20%") 指标日
            th(width="20%") 前一天
            th(width="20%") 上周
            th(width="20%") 上月
          each v1, k1 in v
            tr
              td !{k1}
              td !{v1.thatDay}
              td !{v1.preDay}
              td !{v1.preWeek}
              td !{v1.preMonth}
            
